{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ES2018",
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": false,
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "exclude": ["node_modules", "**/*.spec.ts", "__mocks__"],
  "include": ["src/**/*"]
}
