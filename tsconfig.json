{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "es2020",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": false,
    "baseUrl": ".",
    "allowJs": true,
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
